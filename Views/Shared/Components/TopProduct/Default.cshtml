@model IEnumerable<Ecomerce_Web.ViewModels.HangHoaVM>
<h4 class="mb-4">Sản phẩm xem nhiều nhất</h4>
@foreach(var item in Model)
{
    <div class="d-flex align-items-center justify-content-start">
        <div class="rounded me-4" style="width: 100px; height: 100px;">
            <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid rounded" alt="">
        </div>
        <div>
            <h6 class="mb-2">@item.TenHangHoa</h6>
            <div class="d-flex mb-2">
                <i class="fa fa-star text-secondary"></i>
                <i class="fa fa-star text-secondary"></i>
                <i class="fa fa-star text-secondary"></i>
                <i class="fa fa-star text-secondary"></i>
                <i class="fa fa-star"></i>
            </div>
            <div class="d-flex mb-2">
                <h5 class="fw-bold me-2">@item.DonGia $</h5>
                <h5 class="text-danger">
                    @item.SoLanXem
                    <i class="fa fa-eye"></i>
                </h5>
            </div>
        </div>
    </div>
};
