@model Ecomerce_Web.ViewModels.LoginVM
@{
	ViewData["Title"] = "Đăng nhập";
}
<!-- Login Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <form asp-controller="KhachHang" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Username" class="form-control">

                            <!-- NẾU NHẬP SAI ĐỊNH DẠNG THÌ SẼ TRUYỀN ERROR MESSAGE VÀO THẺ SPAN -->
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                            <!-- END NẾU NHẬP SAI ĐỊNH DẠNG THÌ SẼ TRUYỀN ERROR MESSAGE VÀO THẺ SPAN -->

                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" class="form-control">

                            <!-- NẾU NHẬP SAI ĐỊNH DẠNG THÌ SẼ TRUYỀN ERROR MESSAGE VÀO THẺ SPAN -->
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            <!-- END NẾU NHẬP SAI ĐỊNH DẠNG THÌ SẼ TRUYỀN ERROR MESSAGE VÀO THẺ SPAN -->
                        </div>
                    </div>

                    @* <div class="form-check my-3">
                        <input asp-for="@Model." class="form-check-input" />
                        <label class="form-check-label" for="Remember">Ghi nhớ đăng nhập?</label>
                    </div> *@

                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
                        <a asp-controller="KhachHang" asp-action="Forget Password" class="mt-3 btn border-danger">Quên mật khẩu?</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Login Page End -->
